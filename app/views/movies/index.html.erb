<p id="notice"><%= notice %></p>

<h1><%= t('movie.title') %></h1>

<header>
  <button class="btn btn-lg btn-primary collapse"><%= t('movie.count') %></button>
  <div class="chart content">
    <%= pie_chart(@movie_count_data) %>
  </div>

  <button class="btn btn-lg btn-primary collapse"><%= t('watch.count') %></button>
  <div class="chart content">
    <%= pie_chart(@watch_count_data) %>
  </div>
</header>
</br>

<button class="btn btn-md btn-primary collapse"><%= t('movie.my') %></button>
<section class="container">
 <button class="btn btn-md btn-success"><%= link_to t('movie.new'), new_movie_path %></button>
 </br>
 <table>
   <thead>
     <tr>
       <th><%= t('movie.name') %></th>
       <th><%= t('movie.genre') %></th>
       <th><%= t('movie.watch_count') %></th>
       <th colspan="3"><%= t('movie.actions') %></th>
     </tr>
   </thead>

   <tbody>
     <% @movies.each do |movie| %>
       <tr>
         <td><%= movie.name %></td>
         <td><%= movie.genre.title %></td>
         <td><%= movie.watch_count %></td>
         <td><%= link_to '🖊️', edit_movie_path(movie) %></td>
         <td><%= link_to '🗑️', movie,
           method: :delete,
           data: { confirm: 'Are you sure?' } %>
         </td>
       </tr>
     <% end %>
   </tbody>
 </table>
</section>
<br>

